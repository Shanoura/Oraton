<Page x:Class="Oraton.Pages.RegistrationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Oraton.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegistrationPage">

    <Grid Background="{DynamicResource WindowBackground}">
        <!-- Назад -->
        <Button Content="Назад"
                x:Name="BackButton"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Width="80"
                Height="40"
                Margin="0,30,20,0"
                FontSize="14"
                Background="#E53935"
                Foreground="White"
                BorderBrush="#E53935"
                BorderThickness="0"
                Cursor="Hand"
                Click="Button_Click_1">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="10">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="Background" Value="#E53935"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#D32F2F"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>

        <!-- Заголовок -->
        <TextBlock Text="Реєстрація"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   Margin="0,40,0,0"
                   FontSize="28"
                   FontWeight="Bold"
                   Foreground="{DynamicResource TextColor}"/>

        <!-- Поля реєстрації -->
        <StackPanel VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Width="300"
                    Margin="0,40,0,0">

            <!-- Username -->
            <TextBlock Text="Імʼя користувача"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource TextColor}"
                       Margin="0,10,0,5"/>

            <TextBox x:Name="usernameField"
                     Background="{DynamicResource InputBackground}"
                     Foreground="{DynamicResource TextColor}"
                     BorderBrush="{DynamicResource BorderBrushColor}"
                     BorderThickness="1"
                     Padding="10"
                     FontSize="14"
                     Height="40"/>

            <!-- Email -->
            <TextBlock Text="Email"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource TextColor}"
                       Margin="0,20,0,5"/>

            <TextBox x:Name="emailField"
                     Background="{DynamicResource InputBackground}"
                     Foreground="{DynamicResource TextColor}"
                     BorderBrush="{DynamicResource BorderBrushColor}"
                     BorderThickness="1"
                     Padding="10"
                     FontSize="14"
                     Height="40"/>

            <!-- Пароль -->
            <TextBlock Text="Пароль"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource TextColor}"
                       Margin="0,20,0,5"/>

            <TextBox x:Name="passwordField"
                     Background="{DynamicResource InputBackground}"
                     Foreground="{DynamicResource TextColor}"
                     BorderBrush="{DynamicResource BorderBrushColor}"
                     BorderThickness="1"
                     Padding="10"
                     FontSize="14"
                     Height="40"/>

            <!-- Кнопка -->
            <Button x:Name="RegisterButton"
                    Content="Зареєструватися"
                    HorizontalAlignment="Stretch"
                    Height="45"
                    Margin="0,30,0,0"
                    Background="{DynamicResource AccentColor}"
                    Foreground="White"
                    FontWeight="Bold"
                    Click="Button_Click"
                    BorderThickness="0"
                    Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="10">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Setter Property="Background" Value="{DynamicResource AccentColor}"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#45A049"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <!-- Повідомлення -->
            <TextBlock x:Name="lblMessage"
                       Foreground="{DynamicResource ErrorColor}"
                       FontSize="12"
                       Margin="0,12,0,0"
                       Visibility="Collapsed"
                       TextAlignment="Center"
                       TextWrapping="Wrap"/>
        </StackPanel>
    </Grid>
</Page>
