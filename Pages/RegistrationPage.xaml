<Page x:Class="Oraton.Pages.RegistrationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Oraton.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegistrationPage">

    <Grid Background="#2C3E50">
        <!-- Заголовок -->
        <TextBlock Text="Реєстрація" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,40,0,0" FontSize="24" FontWeight="Bold" Foreground="#ECF0F1"/>

        <!-- Підпис для поля введення користувача -->
        <TextBlock Text="Username" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,106,0,0" FontWeight="SemiBold" FontSize="14" Foreground="#BDC3C7"/>
        <TextBox x:Name="usernameField" HorizontalAlignment="Stretch" VerticalAlignment="Top" Width="250" Height="40" Margin="50,130,50,0" Padding="10,5" BorderBrush="#34495E" BorderThickness="1" Background="#34495E" Foreground="White" FontSize="14" FocusVisualStyle="{x:Null}" />

        <!-- Підпис для поля введення email -->
        <TextBlock Text="Email" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,191,0,0" FontWeight="SemiBold" FontSize="14" Foreground="#BDC3C7"/>
        <TextBox x:Name="emailField" HorizontalAlignment="Stretch" VerticalAlignment="Top" Width="250" Height="40" Margin="50,210,50,0" Padding="10,5" BorderBrush="#34495E" BorderThickness="1" Background="#34495E" Foreground="White" FontSize="14" FocusVisualStyle="{x:Null}" />

        <!-- Підпис для поля введення пароля -->
        <TextBlock Text="Password" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,266,0,0" FontWeight="SemiBold" FontSize="14" Foreground="#BDC3C7"/>
        <TextBox x:Name="passwordField" HorizontalAlignment="Stretch" VerticalAlignment="Top" Width="250" Height="40" Margin="50,290,50,0" Padding="10,5" BorderBrush="#34495E" BorderThickness="1" Background="#34495E" Foreground="White" FontSize="14" FocusVisualStyle="{x:Null}" />

        <!-- Кнопка для підтвердження -->
        <Button Content="Зареєструватися" HorizontalAlignment="Center" VerticalAlignment="Top" Width="250" Height="40" Margin="50,370,50,0" FontSize="16" FontWeight="Bold" Background="#2980B9" Foreground="White" BorderBrush="#2980B9" BorderThickness="1" Cursor="Hand" Click="Button_Click">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="14"/>
                </Style>
            </Button.Resources>
        </Button>

        <!-- Повідомлення -->
        <TextBlock x:Name="lblMessage" Foreground="Red" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,420,0,0" FontSize="12"/>

        <!-- Кнопка назад в правому верхньому куті -->
        <Button Content="Назад" HorizontalAlignment="Right" VerticalAlignment="Top" Width="80" Height="40" Margin="0,30,20,0" FontSize="14" Background="#E74C3C" Foreground="White" BorderBrush="#E74C3C" BorderThickness="1" Cursor="Hand" Click="Button_Click_1">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="14"/>
                </Style>
            </Button.Resources>
        </Button>
    </Grid>

</Page>
