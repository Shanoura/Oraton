<Page x:Class="Oraton.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Oraton"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="800"
      Title="LoginPage">

    <Grid Background="{DynamicResource WindowBackground}">
        <Button Content="Назад"
                x:Name="BackButton"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Width="80"
                Height="40"
                Margin="0,20,20,0"
                Background="#E53935"
                Foreground="White"
                Click="Button_Click"
                FontWeight="SemiBold"
                BorderThickness="0"
                Cursor="Hand">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="10">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="Background" Value="#E53935"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#D32F2F"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>
        <!-- Центрована форма -->
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20" Width="300">

            <!-- Username -->
            <Label Content="Імʼя користувача"
                   HorizontalAlignment="Left"
                   Foreground="{DynamicResource TextColor}"
                   FontSize="14"
                   Margin="0,0,0,6"/>

            <TextBox x:Name="txtUsername"
                     Background="{DynamicResource InputBackground}"
                     Foreground="{DynamicResource TextColor}"
                     BorderBrush="{DynamicResource BorderBrushColor}"
                     BorderThickness="1"
                     Padding="10,0"
                     FontSize="14"
                     Height="35"
                     VerticalContentAlignment="Center"/>

            <!-- Password -->
            <Label Content="Пароль"
                   HorizontalAlignment="Left"
                   Foreground="{DynamicResource TextColor}"
                   FontSize="14"
                   Margin="0,16,0,6"/>

            <PasswordBox x:Name="txtPassword"
                         Background="{DynamicResource InputBackground}"
                         Foreground="{DynamicResource TextColor}"
                         BorderBrush="{DynamicResource BorderBrushColor}"
                         BorderThickness="1"
                         FontSize="14"
                         Padding="10,0"
                         Height="35"
                         VerticalContentAlignment="Center"/>

            <!-- Login button -->
            <Button x:Name="LoginButton"
                    Content="Вхід"
                    HorizontalAlignment="Center"
                    Width="140"
                    Height="42"
                    Margin="0,24,0,0"
                    Background="{DynamicResource AccentColor}"
                    Foreground="White"
                    FontWeight="SemiBold"
                    Click="Button_Click_1"
                    BorderThickness="0"
                    Cursor="Hand"/>

            <!-- Повідомлення -->
            <TextBlock x:Name="lblMessage"
                       Foreground="{DynamicResource ErrorColor}"
                       FontSize="12"
                       Margin="0,12,0,0"
                       Visibility="Collapsed"
                       TextAlignment="Center"
                       TextWrapping="Wrap"/>
        </StackPanel>
    </Grid>
</Page>
