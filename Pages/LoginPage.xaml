<Page x:Class="Oraton.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Oraton"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="800"
      Title="LoginPage">

    <Grid Background="#2C3E50">
        <!-- Панель для полів введення -->
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20">

            <!-- Підпис для поля Username -->
            <Label Content="Username" HorizontalAlignment="Left" Foreground="#BDC3C7" FontSize="14" Margin="0,0,0,10"/>

            <!-- Поле введення Username -->
            <TextBox x:Name="txtUsername" TextWrapping="Wrap" Text="" Background="#34495E" Width="250" Foreground="White" BorderBrush="#BDC3C7" BorderThickness="1" Padding="10,5" FontSize="14"/>

            <!-- Підпис для поля Password -->
            <Label Content="Password" HorizontalAlignment="Left" Foreground="#BDC3C7" FontSize="14" Margin="0,20,0,10"/>

            <!-- Поле введення Password -->
            <PasswordBox x:Name="txtPassword" HorizontalAlignment="Left" Width="250" Height="30" Background="#34495E" Foreground="White" BorderBrush="#BDC3C7" BorderThickness="1" FontSize="14" Padding="10,5"/>

            <!-- Кнопка "Вхід" -->
            <Button Content="Вхід" HorizontalAlignment="Center" Height="37" Width="142" Background="#2980B9" Foreground="White" Click="Button_Click_1" Margin="0,20,0,0">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="14"/>
                    </Style>
                </Button.Resources>
            </Button>

            <!-- Повідомлення -->
            <TextBlock x:Name="lblMessage" Foreground="Red" HorizontalAlignment="Center" FontSize="12" Visibility="Collapsed" Margin="0,10,0,0"/>

        </StackPanel>

        <!-- Кнопка "Назад" в правому верхньому куті -->
        <Button Content="Назад" HorizontalAlignment="Right" VerticalAlignment="Top" Background="#E74C3C" Foreground="White" Click="Button_Click" Width="80" Height="40" Margin="0,20,20,0">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="14"/>
                </Style>
            </Button.Resources>
        </Button>

    </Grid>
</Page>
