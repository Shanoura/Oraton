<Window x:Class="Oraton.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Oraton"
        mc:Ignorable="d"
        Title="Oraton"
        Height="500"
        Width="800"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Icon="Images/ico.ico">

    <Border Background="{DynamicResource WindowBackground}" CornerRadius="12" Padding="0" BorderBrush="#3A3A50" BorderThickness="1">
        <Grid>
            <!-- Header panel -->
            <Grid Background="{DynamicResource HeaderBackground}" Height="40" VerticalAlignment="Top" MouseLeftButtonDown="Window_MouseLeftButtonDown">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Oraton"
                           VerticalAlignment="Center"
                           Margin="12,0,0,0"
                           Foreground="{DynamicResource TextColor}"
                           FontSize="16"
                           FontWeight="Bold"/>

                <StackPanel Orientation="Horizontal" Grid.Column="1">
                    <Button Content="–"
                            Click="Minimize_Click"
                            Width="40" Height="40"
                            Background="Transparent"
                            Foreground="{DynamicResource TextColor}"
                            FontSize="16"
                            BorderBrush="{x:Null}"
                            Cursor="Hand"
                            ToolTip="Згорнути"/>
                    <Button Content="✕"
                            Click="Close_Click"
                            Width="40" Height="40"
                            Background="Transparent"
                            Foreground="{DynamicResource TextColor}"
                            FontSize="16"
                            BorderBrush="{x:Null}"
                            Cursor="Hand"
                            ToolTip="Закрити"/>
                </StackPanel>
            </Grid>

            <!-- Main Grid -->
            <Grid Name="MainGrid" Margin="0,40,0,0" Background="{DynamicResource WindowBackground}">
                <Menu DockPanel.Dock="Top" Background="{DynamicResource MenuBackground}" Margin="0">
                    <!-- Довідка -->
                    <MenuItem Header="Довідка" Foreground="{DynamicResource TextColor}">
                        <MenuItem Header="Про програму" Click="About_Click" Foreground="Black"/>
                    </MenuItem>

                    <!-- Тема -->
                    <MenuItem Header="Тема" Foreground="{DynamicResource TextColor}">
                        <MenuItem x:Name="DarkThemeItem"
                  Header="Темна"
                  IsCheckable="True"
                  IsChecked="True"
                  Click="DarkThemeItem_Click"
                  Foreground="Black"/>
                        <MenuItem x:Name="LightThemeItem"
                  Header="Світла"
                  IsCheckable="True"
                  IsChecked="False"
                  Click="LightThemeItem_Click"
                  Foreground="Black"/>
                    </MenuItem>
                </Menu>


                <Frame Name="MainFrame"
                       NavigationUIVisibility="Hidden"
                       Background="{DynamicResource WindowBackground}"
                       VerticalAlignment="Stretch"
                       HorizontalAlignment="Stretch"
                       Margin="0,30,0,0"/>

                <Label x:Name="namelabel"
                       Content="Oraton"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Top"
                       FontSize="40"
                       FontWeight="Bold"
                       Foreground="{DynamicResource TextColor}"
                       Margin="0,70,0,0"
                       Opacity="0.9"/>

                <Button x:Name="LoginButton"
                        Content="Реєстрація"
                        HorizontalAlignment="Left"
                        Margin="120,300,0,0"
                        VerticalAlignment="Top"
                        Height="50"
                        Width="140"
                        Click="Button_Click_2"
                        Background="#4CAF50"
                        Foreground="{DynamicResource TextColor}"
                        FontWeight="SemiBold"
                        BorderThickness="0"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="10" Padding="8">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#45A049"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button x:Name="RegButton"
                        Content="Вхід"
                        HorizontalAlignment="Right"
                        Margin="0,300,120,0"
                        VerticalAlignment="Top"
                        Height="50"
                        Width="140"
                        Click="Button_Click_1"
                        Background="#E53935"
                        Foreground="{DynamicResource TextColor}"
                        FontWeight="SemiBold"
                        BorderThickness="0"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="10" Padding="8">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#D32F2F"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Grid>
    </Border>
</Window>
