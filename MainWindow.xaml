<Window x:Class="Oraton.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Oraton"
        mc:Ignorable="d"
        Title="Oraton" Height="500" Width="800" Icon="Images/ico.ico">

    <Grid Name="MainGrid" Background="#2C3E50" Margin="0,20,0,0">
        <!-- Меню -->
        <Menu DockPanel.Dock="Top" Background="#34495E" Margin="0,-20,0,187">
            <MenuItem Header="Довідка" Foreground="#ECF0F1">
                <MenuItem Header="Про програму" Click="About_Click" Foreground="#BDC3C7"/>
            </MenuItem>
        </Menu>

        <!-- Основний фрейм -->
        <Frame Name="MainFrame" NavigationUIVisibility="Hidden" Background="#34495E" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>

        <!-- Лейбл з назвою програми Oraton по центру -->
        <Label x:Name="namelabel" Content="Oraton" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="36" FontWeight="Bold" Foreground="White" Margin="0,100,0,0"/>

        <!-- Кнопка "Registration" -->
        <Button x:Name="LoginButton" Content="Реєстрація" HorizontalAlignment="Left" Margin="145,299,0,0" VerticalAlignment="Top" Height="49" Width="121" Click="Button_Click_2" Background="#2980B9" Foreground="White">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="14"/>
                </Style>
            </Button.Resources>
        </Button>

        <!-- Кнопка "Login" -->
        <Button x:Name="RegButton" Content="Вхід" HorizontalAlignment="Left" Margin="559,299,0,0" VerticalAlignment="Top" Height="49" Width="121" Click="Button_Click_1" Background="#E74C3C" Foreground="White">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="14"/>
                </Style>
            </Button.Resources>
        </Button>
    </Grid>
</Window>
